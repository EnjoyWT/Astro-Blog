---
import { SITE } from '~/utils/config';
import logo from '~/assets/images/origin.png'
import Image from '~/components/common/Image.astro';

const {
  id = "Logo",
  isDark = false,
} = Astro.props;
---


  <span class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white">
    {SITE?.name}
  </span>
  <div class="pl-2"> 
    <Image class="dark:filter dark:invert" src= {logo } alt="44" width={30}, height={30}> 
  </div>



